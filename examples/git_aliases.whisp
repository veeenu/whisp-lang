pub fn grom() {
  gpm;
  run git rebase origin main;
}

pub fn gpm() {
  let cur_branch = { run git branch --show-current };
  run git checkout main;
  run git fetch;
  run git pull;
  run git checkout { cur_branch };
}

pub fn ct(test_filter, extra_params) {
  run cargo test { test_filter } -- { extra_params }
}

pub fn ctnc(test_filter) {
  ct { test_filter } --nocapture
}
